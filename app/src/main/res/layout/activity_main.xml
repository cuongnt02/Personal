<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/record_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:focusable="true"
        android:clickable="true"
        app:rippleColor="@color/cardview_light_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_card_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="Test"
                style="@android:style/TextAppearance.Material.Title"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                tools:text="01-01-2025"
                android:textStyle="italic"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>